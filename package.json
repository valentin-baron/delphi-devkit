{
  "name": "delphi-devkit",
  "displayName": "Delphi Utils (beta)",
  "description": "Utilities for developing in Delphi using VS Code",
  "version": "0.1.0",
  "publisher": "Snowcaloid",
  "homepage": "https://www.github.com/Snowcaloid",
  "icon": "assets/DelphiHelmet.png",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "workspaceContains:**"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "delphi-devkit.swapToDfmPas",
        "title": "Delphi Utils: Swap .DFM/.PAS"
      },
      {
        "command": "delphi-devkit.projects.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "delphi-devkit.projects.launchExecutable",
        "title": "Launch Application"
      },
      {
        "command": "delphi-devkit.projects.compile",
        "title": "Compile"
      },
      {
        "command": "delphi-devkit.projects.recreate",
        "title": "Recreate"
      },
      {
        "command": "delphi-devkit.projects.showInExplorer",
        "title": "Show in Explorer"
      },
      {
        "command": "delphi-devkit.projects.openInFileExplorer",
        "title": "Open in File Explorer"
      },
      {
        "command": "delphi-devkit.projects.runExecutable",
        "title": "Run"
      },
      {
        "command": "delphi-devkit.projects.configureOrCreateIni",
        "title": "Configure/Create .ini"
      },
      {
        "command": "delphi-devkit.selectCompilerConfiguration",
        "title": "Select Delphi Compiler",
        "icon": "$(tools)"
      },
      {
        "command": "delphi-devkit.showCompilerDropdown",
        "title": "Show Delphi Compiler Dropdown"
      },
      {
        "command": "delphi-devkit.projects.pickGroupProject",
        "title": "Pick Group Project",
        "icon": "$(file-submodule)"
      },
      {
        "command": "delphi-devkit.projects.unloadGroupProject",
        "title": "Unload Group Project",
        "icon": "$(close)",
        "when": "view == delphiProjects && delphiDevkit:isGroupProjectView == true"
      }
    ],
    "views": {
      "delphi-projects": [
        {
          "id": "delphiProjects",
          "name": "Projects",
          "when": "workbenchState != empty",
          "icon": "assets/DelphiHelmetLine.svg",
          "canDragAndDrop": true
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "delphi-projects",
          "title": "Delphi Projects",
          "icon": "assets/DelphiHelmetLine.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "delphi-devkit.projects.refresh",
          "when": "view == delphiProjects",
          "group": "navigation"
        },
        {
          "command": "delphi-devkit.selectCompilerConfiguration",
          "when": "view == delphiProjects",
          "group": "navigation"
        },
        {
          "command": "delphi-devkit.projects.pickGroupProject",
          "when": "view == delphiProjects",
          "group": "navigation@2"
        },
        {
          "command": "delphi-devkit.projects.unloadGroupProject",
          "when": "view == delphiProjects && delphiDevkit:isGroupProjectView == true",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "delphi-devkit.projects.compile",
          "when": "view == delphiProjects",
          "group": "1_build@1"
        },
        {
          "command": "delphi-devkit.projects.recreate",
          "when": "view == delphiProjects",
          "group": "1_build@2"
        },
        {
          "command": "delphi-devkit.projects.showInExplorer",
          "when": "view == delphiProjects",
          "group": "2_files@1"
        },
        {
          "command": "delphi-devkit.projects.openInFileExplorer",
          "when": "view == delphiProjects",
          "group": "2_files@2"
        },
        {
          "command": "delphi-devkit.projects.runExecutable",
          "when": "view == delphiProjects",
          "group": "3_run@1"
        },
        {
          "command": "delphi-devkit.projects.configureOrCreateIni",
          "when": "view == delphiProjects",
          "group": "3_run@2"
        }
      ]
    },
    "languages": [
      {
        "id": "delphi-devkit.dfm",
        "extensions": [
          ".dfm"
        ],
        "aliases": [
          "Delphi Form",
          "Delphi DFM"
        ]
      },
      {
        "id": "delphi-devkit.compilerOutput",
        "aliases": ["Delphi Compiler Output"],
        "extensions": []
      }
    ],
    "grammars": [
      {
        "language": "delphi-devkit.compilerOutput",
        "scopeName": "text.output.delphi-compiler",
        "path": "./config/languages/grammar/compiler-output.json"
      }
    ],
    "keybindings": [
      {
        "command": "delphi-devkit.swapToDfmPas",
        "key": "alt+f12",
        "mac": "alt+f12",
        "when": "editorTextFocus && (resourceExtname == '.pas' || resourceExtname == '.dfm')"
      }
    ],
    "configuration": {
      "title": "Delphi Utils",
      "properties": {
        "delphi-devkit.projects.discovery.enable": {
          "type": "boolean",
          "default": true,
          "description": "Allow automatic discovery of Delphi projects in the workspace."
        },
        "delphi-devkit.projects.discovery.useFileSystemWatchers": {
          "type": "boolean",
          "default": false,
          "description": "Use file system watchers to detect changes in Delphi project files. If false, requires manual refresh. When enabled with git, checkouts can be problematic.",
          "scope": "resource"
        },
        "delphi-devkit.projects.gitCheckoutDelay": {
          "type": "number",
          "default": 30000,
          "description": "Delay in milliseconds before reloading project watchers after a git checkout. This helps avoid issues with rapid git operations.",
          "scope": "resource"
        },
        "delphi-devkit.projects.discovery.projectPaths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**"
          ],
          "description": "Glob patterns specifying where to search for Delphi projects. Use patterns like 'src/**' to search only in specific directories, or '**' to search everywhere.",
          "scope": "resource"
        },
        "delphi-devkit.projects.discovery.excludePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/__history/**",
            "**/.history/**"
          ],
          "description": "Glob patterns for paths to exclude from the Delphi Projects explorer. Use standard glob patterns like '**/folder/**' to exclude entire directories.",
          "scope": "resource"
        },
        "delphi-devkit.projects.sortProjects": {
          "type": "boolean",
          "default": false,
          "description": "Sort Delphi projects alphabetically in the explorer. If false, preserves original order."
        },
        "delphi-devkit.compiler.configurations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Display name for the Delphi version"
              },
              "rsVarsPath": {
                "type": "string",
                "description": "Path to the RSVars.bat file for this Delphi version"
              },
              "msBuildPath": {
                "type": "string",
                "description": "Path to MSBuild.exe for this Delphi version"
              },
              "buildArguments": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Default build arguments for this Delphi version"
              },
              "usePrettyFormat": {
                "type": "boolean",
                "default": true,
                "description": "Use pretty format for build output. If false, unchanged compiler output."
              }
            },
            "required": [
              "name",
              "rsVarsPath",
              "msBuildPath",
              "buildArguments"
            ]
          },
          "default": [
            {
              "name": "Delphi 12",
              "rsVarsPath": "C:\\Program Files (x86)\\Embarcadero\\Studio\\23.0\\bin\\rsvars.bat",
              "msBuildPath": "C:\\Windows\\Microsoft.NET\\Framework\\v4.0.30319\\MSBuild.exe",
              "buildArguments": [
                "/verbosity:minimal",
                "/p:DCC_DebugInformation=1",
                "/p:RuntimeIdentifiers=3.5",
                "/p:Configuration=Debug"
              ]
            },
            {
              "name": "Delphi 11",
              "rsVarsPath": "C:\\Program Files (x86)\\Embarcadero\\Studio\\22.0\\bin\\rsvars.bat",
              "msBuildPath": "C:\\Windows\\Microsoft.NET\\Framework\\v4.0.30319\\MSBuild.exe",
              "buildArguments": [
                "/verbosity:minimal",
                "/p:DCC_DebugInformation=1",
                "/p:RuntimeIdentifiers=3.5",
                "/p:Configuration=Debug"
              ]
            },
            {
              "name": "Delphi 2007",
              "rsVarsPath": "C:\\Program Files (x86)\\CodeGear\\RAD Studio\\5.0\\bin\\rsvars.bat",
              "msBuildPath": "C:\\Windows\\Microsoft.NET\\Framework\\v4.0.30319\\MSBuild.exe",
              "buildArguments": [
                "/verbosity:minimal",
                "/p:DCC_DebugInformation=True",
                "/p:RuntimeIdentifiers=3.5",
                "/p:Configuration=Debug"
              ]
            }
          ],
          "description": "Delphi compiler configurations with paths and build arguments",
          "scope": "resource"
        },
        "delphi-devkit.compiler.currentConfiguration": {
          "type": "string",
          "default": "Delphi 12",
          "description": "Currently selected Delphi compiler configuration",
          "scope": "resource"
        }
      }
    }
  },
  "repository": {
    "url": "https://github.com/dontenwill-standard/vscode_delphi_utils",
    "type": "git"
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/mock-fs": "^4.13.4",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@types/xmldom": "^0.1.34",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "mock-fs": "^5.5.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@types/sql.js": "^1.4.9",
    "@types/uuid": "^10.0.0",
    "@xmldom/xmldom": "^0.9.8",
    "minimatch": "^10.0.3",
    "reflect-metadata": "^0.2.2",
    "sql.js": "^1.13.0",
    "typeorm": "^0.3.25",
    "uuid": "^11.1.0"
  }
}