{
  "name": "delphi-utils",
  "displayName": "Delphi Utils",
  "description": "Utilities for developing in Delphi using ",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:delphi-dfm"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "delphi-utils.swapToDfmPas",
        "title": "Delphi Utils: Swap .DFM/.PAS"
      },
      {
        "command": "delphi-utils.refreshDprExplorer",
        "title": "Refresh",
        "icon": "$(refresh)"
      }
    ],
    "views": {
      "delphi-explorer": [
        {
          "id": "dprExplorer",
          "name": "DPR Files",
          "when": "workbenchState != empty",
          "icon": "$(file-code)"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "delphi-explorer",
          "title": "Delphi Utils",
          "icon": "$(symbol-variable)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "delphi-utils.refreshDprExplorer",
          "when": "view == dprExplorer",
          "group": "navigation"
        }
      ]
    },
    "languages": [
      {
        "id": "delphi-dfm",
        "extensions": [
          ".dfm"
        ],
        "aliases": [
          "Delphi DFM"
        ]
      }
    ]
  },
  "repository": {
    "url": "https://github.com/dontenwill/vscode-delphi-utils",
    "type": "git"
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/minimatch": "^5.1.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "configuration": {
    "title": "Delphi Utils",
    "properties": {
      "delphi-utils.dprExplorer.excludePatterns": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "default": [
          "**/__history/**",
          "**/.history/**"
        ],
        "description": "Glob patterns for paths to exclude from the DPR file explorer. Use standard glob patterns like '**/folder/**' to exclude entire directories.",
        "scope": "resource"
      }
    }
  },
  "dependencies": {
    "minimatch": "^10.0.3"
  }
}
