{
  "name": "delphi-devkit",
  "displayName": "DDK - Delphi Development Kit",
  "description": "Utilities for developing in Delphi using VS Code",
  "version": "2.0.0",
  "publisher": "Valentin Baron",
  "license": "SEE LICENSE IN LICENSE",
  "homepage": "https://www.github.com/valentin-baron",
  "icon": "assets/DelphiHelmet.png",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ddk.projects.refresh",
        "title": "Discover File Paths",
        "icon": "$(refresh)",
        "category": "_ddk_treeview",
        "when": "false"
      },
      {
        "command": "ddk.projects.addProject",
        "title": "Add Project",
        "icon": "$(add)",
        "category": "_ddk_treeview",
        "when": "false"
      },
      {
        "command": "ddk.projects.removeProject",
        "title": "Remove Project",
        "icon": "$(remove)",
        "category": "_ddk_treeview",
        "when": "false"
      },
      {
        "command": "ddk.projects.addWorkspace",
        "title": "Add Workspace",
        "icon": "$(add)",
        "category": "_ddk_treeview",
        "when": "false"
      },
      {
        "command": "ddk.projects.renameWorkspace",
        "title": "Rename Workspace",
        "icon": "$(edit)",
        "category": "_ddk_treeview",
        "when": "false"
      },
      {
        "command": "ddk.projects.removeWorkspace",
        "title": "Remove Workspace",
        "icon": "$(remove)",
        "category": "_ddk_treeview",
        "when": "false"
      },
      {
        "command": "ddk.projects.selectProject",
        "title": "Select Project",
        "icon": "$(check)",
        "category": "_ddk_treeview",
        "when": "false"
      },
      {
        "command": "ddk.projects.compile",
        "title": "Compile",
        "icon": "$(sync-ignored)",
        "category": "_ddk_treeview",
        "when": "false"
      },
      {
        "command": "ddk.projects.recreate",
        "title": "Recreate",
        "icon": "$(sync)",
        "category": "_ddk_treeview",
        "when": "false"
      },
      {
        "command": "ddk.projects.showInExplorer",
        "title": "Show in Explorer",
        "icon": "$(folder)",
        "category": "_ddk_treeview",
        "when": "false"
      },
      {
        "command": "ddk.projects.openInFileExplorer",
        "title": "Open in File Explorer",
        "icon": "$(folder-opened)",
        "category": "_ddk_treeview",
        "when": "false"
      },
      {
        "command": "ddk.projects.runExecutable",
        "title": "Run",
        "icon": "$(play)",
        "category": "_ddk_treeview",
        "when": "false"
      },
      {
        "command": "ddk.projects.configureOrCreateIni",
        "title": "Configure/Create .ini",
        "icon": "$(settings-gear)",
        "category": "_ddk_treeview",
        "when": "false"
      },
      {
        "command": "ddk.projects.compileAllFromHere",
        "title": "Compile all from here",
        "category": "_ddk_treeview",
        "when": "false"
      },
      {
        "command": "ddk.projects.recreateAllFromHere",
        "title": "Recreate all from here",
        "category": "_ddk_treeview",
        "when": "false"
      },
      {
        "command": "ddk.projects.compileAllInWorkspace",
        "title": "Compile all in workspace",
        "category": "_ddk_treeview",
        "when": "false"
      },
      {
        "command": "ddk.projects.recreateAllInWorkspace",
        "title": "Recreate all in workspace",
        "category": "_ddk_treeview",
        "when": "false"
      },
      {
        "command": "ddk.projects.setManualPath",
        "title": "Set Path manually",
        "icon": "$(pencil)",
        "category": "_ddk_treeview",
        "when": "false"
      },
      {
        "command": "ddk.projects.compileAllInGroupProject",
        "title": "Compile all in group project",
        "icon": "$(sync-ignored)",
        "category": "DDK"
      },
      {
        "command": "ddk.projects.recreateAllInGroupProject",
        "title": "Recreate all in group project",
        "icon": "$(sync)",
        "category": "DDK"
      },
      {
        "command": "ddk.importConfiguration",
        "title": "Import Configuration",
        "icon": "$(cloud-download)",
        "category": "DDK"
      },
      {
        "command": "ddk.exportConfiguration",
        "title": "Export Configuration",
        "icon": "$(cloud-upload)",
        "category": "DDK"
      },
      {
        "command": "ddk.projects.editDefaultIni",
        "title": "Edit Default .ini",
        "icon": "$(pencil)",
        "category": "DDK"
      },
      {
        "command": "ddk.projects.selectCompilerConfiguration",
        "title": "Select Delphi Compiler for Group Projects",
        "icon": "$(tools)",
        "category": "DDK"
      },
      {
        "command": "ddk.projects.pickGroupProject",
        "title": "Pick Group Project",
        "icon": "$(file-submodule)",
        "category": "DDK"
      },
      {
        "command": "ddk.projects.unloadGroupProject",
        "title": "Unload Group Project",
        "icon": "$(close)",
        "when": "ddk:isGroupProjectOpened == true",
        "category": "DDK"
      },
      {
        "command": "ddk.projects.compileSelectedProject",
        "title": "Compile Selected Project",
        "when": "ddk:isProjectSelected == true",
        "category": "DDK"
      },
      {
        "command": "ddk.projects.recreateSelectedProject",
        "title": "Recreate Selected Project",
        "when": "ddk:isProjectSelected == true",
        "category": "DDK"
      },
      {
        "command": "ddk.projects.runSelectedProject",
        "title": "Run Selected Project",
        "when": "ddk:isProjectSelected == true && ddk:doesSelectedProjectHaveExe == true",
        "category": "DDK"
      },
      {
        "command": "ddk.dfm.swapToDfmPas",
        "title": "Swap .DFM/.PAS",
        "when": "editorTextFocus && (resourceExtname == '.pas' || resourceExtname == '.dfm')",
        "category": "DDK"
      },
      {
        "command": "ddk.editFormatterConfig",
        "title": "Edit Formatter Configuration",
        "category": "DDK"
      }
    ],
    "views": {
      "ddk-projects": [
        {
          "id": "ddk.view.projects.workspaces",
          "name": "Self-Defined Workspaces",
          "icon": "assets/DelphiHelmetLine.svg",
          "canDragAndDrop": true
        },
        {
          "id": "ddk.view.projects.groupProject",
          "name": "Loaded Group Project",
          "icon": "assets/DelphiHelmetLine.svg"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ddk-projects",
          "title": "Delphi Projects",
          "icon": "assets/DelphiHelmetLine.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "ddk.projects.addWorkspace",
          "when": "view == ddk.view.projects.workspaces",
          "group": "navigation"
        },
        {
          "command": "ddk.importConfiguration",
          "when": "view == ddk.view.projects.workspaces",
          "group": "navigation"
        },
        {
          "command": "ddk.exportConfiguration",
          "when": "view == ddk.view.projects.workspaces",
          "group": "navigation"
        },
        {
          "command": "ddk.projects.selectCompilerConfiguration",
          "when": "view == ddk.view.projects.groupProject",
          "group": "navigation"
        },
        {
          "command": "ddk.projects.compileAllInGroupProject",
          "when": "view == ddk.view.projects.groupProject && ddk:isGroupProjectOpened == true",
          "group": "navigation@1"
        },
        {
          "command": "ddk.projects.recreateAllInGroupProject",
          "when": "view == ddk.view.projects.groupProject && ddk:isGroupProjectOpened == true",
          "group": "navigation@2"
        },
        {
          "command": "ddk.projects.pickGroupProject",
          "when": "view == ddk.view.projects.groupProject",
          "group": "navigation@3"
        },
        {
          "command": "ddk.projects.unloadGroupProject",
          "when": "view == ddk.view.projects.groupProject && ddk:isGroupProjectOpened == true",
          "group": "navigation@4"
        }
      ],
      "view/item/context": [
        {
          "command": "ddk.projects.selectProject",
          "when": "view =~ /^ddk\\.view\\.projects.*/ && (viewItem == ddk.context.projects.project || viewItem == ddk.context.projects.projectFile)",
          "group": "1_select@1"
        },
        {
          "command": "ddk.projects.compile",
          "when": "view =~ /^ddk\\.view\\.projects.*/ && (viewItem == ddk.context.projects.project || viewItem == ddk.context.projects.projectFile)",
          "group": "2_compiler@1"
        },
        {
          "command": "ddk.projects.recreate",
          "when": "view =~ /^ddk\\.view\\.projects.*/ && (viewItem == ddk.context.projects.project || viewItem == ddk.context.projects.projectFile)",
          "group": "2_compiler@2"
        },
        {
          "command": "ddk.projects.compileAllFromHere",
          "when": "view =~ /^ddk\\.view\\.projects.*/ && (viewItem == ddk.context.projects.project || viewItem == ddk.context.projects.projectFile)",
          "group": "2_compiler@3"
        },
        {
          "command": "ddk.projects.recreateAllFromHere",
          "when": "view =~ /^ddk\\.view\\.projects.*/ && (viewItem == ddk.context.projects.project || viewItem == ddk.context.projects.projectFile)",
          "group": "2_compiler@3"
        },
        {
          "command": "ddk.projects.compileAllInWorkspace",
          "when": "view == ddk.view.projects.workspaces",
          "group": "2_compiler@4"
        },
        {
          "command": "ddk.projects.recreateAllInWorkspace",
          "when": "view == ddk.view.projects.workspaces",
          "group": "2_compiler@5"
        },
        {
          "command": "ddk.projects.showInExplorer",
          "when": "view =~ /^ddk\\.view\\.projects.*/ && (viewItem == ddk.context.projects.projectFile)",
          "group": "3_file_actions@1"
        },
        {
          "command": "ddk.projects.openInFileExplorer",
          "when": "view =~ /^ddk\\.view\\.projects.*/ && (viewItem == ddk.context.projects.projectFile)",
          "group": "3_file_actions@2"
        },
        {
          "command": "ddk.projects.refresh",
          "when": "view =~ /^ddk\\.view\\.projects.*/ && (viewItem == ddk.context.projects.project || viewItem == ddk.context.projects.projectFile)",
          "group": "3_file_actions@2"
        },
        {
          "command": "ddk.projects.runExecutable",
          "when": "view =~ /^ddk\\.view\\.projects.*/ && (viewItem == ddk.context.projects.project || viewItem == ddk.context.projects.projectFile)",
          "group": "4_exe_actions@1"
        },
        {
          "command": "ddk.projects.configureOrCreateIni",
          "when": "view =~ /^ddk\\.view\\.projects.*/ && (viewItem == ddk.context.projects.project || viewItem == ddk.context.projects.projectFile)",
          "group": "4_exe_actions@2"
        },
        {
          "command": "ddk.projects.renameWorkspace",
          "when": "view == ddk.view.projects.workspaces && viewItem == ddk.context.projects.workspace",
          "group": "5_workspace@1"
        },
        {
          "command": "ddk.projects.removeWorkspace",
          "when": "view == ddk.view.projects.workspaces && viewItem == ddk.context.projects.workspace",
          "group": "5_workspace@2"
        },
        {
          "command": "ddk.projects.addProject",
          "when": "view == ddk.view.projects.workspaces && viewItem",
          "group": "6_project@1"
        },
        {
          "command": "ddk.projects.removeProject",
          "when": "view == ddk.view.projects.workspaces && (viewItem == ddk.context.projects.project || viewItem == ddk.context.projects.projectFile)",
          "group": "6_project@2"
        }
      ]
    },
    "languages": [
      {
        "id": "ddk.dfm",
        "extensions": [
          ".dfm"
        ],
        "aliases": [
          "Delphi Form",
          "Delphi DFM"
        ]
      },
      {
        "id": "ddk.compiler",
        "aliases": [
          "DDK Compiler Output"
        ]
      }
    ],
    "grammars": [
      {
        "language": "ddk.compiler",
        "scopeName": "text.output.delphi-compiler",
        "path": "./config/languages/grammar/compiler-output.json"
      }
    ],
    "keybindings": [
      {
        "command": "ddk.dfm.swapToDfmPas",
        "key": "alt+f12",
        "mac": "alt+f12",
        "when": "editorTextFocus && (resourceExtname == '.pas' || resourceExtname == '.dfm')"
      },
      {
        "command": "ddk.projects.compileSelectedProject",
        "key": "ctrl+f9",
        "when": "ddk:isProjectSelected == true"
      },
      {
        "command": "ddk.projects.recreateSelectedProject",
        "key": "shift+f9",
        "when": "ddk:isProjectSelected == true"
      },
      {
        "command": "ddk.projects.runSelectedProject",
        "key": "f9",
        "when": "ddk:doesSelectedProjectHaveExe == true"
      }
    ],
    "configuration": {
      "title": "Delphi Development Kit",
      "properties": {
        "ddk.formatter.enable": {
          "type": "boolean",
          "title": "Enable Delphi Formatter",
          "default": true,
          "description": "Enable the Delphi Formatter integration (requires Formatter.exe)."
        },
        "ddk.formatter.path": {
          "type": "string",
          "title": "Formatter.exe Path",
          "default": "C:\\Program Files (x86)\\Embarcadero\\Studio\\23.0\\bin\\Formatter.exe",
          "description": "Path to the Formatter.exe.",
          "scope": "resource"
        },
        "ddk.formatter.args": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "-silent"
          ],
          "description": "Arguments to pass to Formatter.exe. The default uses the provided ddk_formatter.config.",
          "scope": "resource"
        },
        "ddk.formatter.formatOnSave": {
          "type": "boolean",
          "title": "Format On Save",
          "default": false,
          "description": "Automatically format the file when saving.",
          "scope": "resource"
        },
        "ddk.projects.compiler.configurations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Display name for the Delphi version"
              },
              "rsVarsPath": {
                "type": "string",
                "description": "Path to the RSVars.bat file for this Delphi version"
              },
              "msBuildPath": {
                "type": "string",
                "description": "Path to MSBuild.exe for this Delphi version"
              },
              "buildArguments": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Default build arguments for this Delphi version"
              }
            },
            "required": [
              "name",
              "rsVarsPath",
              "msBuildPath",
              "buildArguments"
            ]
          },
          "default": [
            {
              "name": "Delphi 12",
              "rsVarsPath": "C:\\Program Files (x86)\\Embarcadero\\Studio\\23.0\\bin\\rsvars.bat",
              "msBuildPath": "C:\\Windows\\Microsoft.NET\\Framework\\v4.0.30319\\MSBuild.exe",
              "buildArguments": [
                "/verbosity:minimal",
                "/p:DCC_DebugInformation=1",
                "/p:RuntimeIdentifiers=3.5",
                "/p:Configuration=Debug"
              ]
            },
            {
              "name": "Delphi 11",
              "rsVarsPath": "C:\\Program Files (x86)\\Embarcadero\\Studio\\22.0\\bin\\rsvars.bat",
              "msBuildPath": "C:\\Windows\\Microsoft.NET\\Framework\\v4.0.30319\\MSBuild.exe",
              "buildArguments": [
                "/verbosity:minimal",
                "/p:DCC_DebugInformation=1",
                "/p:RuntimeIdentifiers=3.5",
                "/p:Configuration=Debug"
              ]
            },
            {
              "name": "Delphi 2007",
              "rsVarsPath": "C:\\Program Files (x86)\\CodeGear\\RAD Studio\\5.0\\bin\\rsvars.bat",
              "msBuildPath": "C:\\Windows\\Microsoft.NET\\Framework\\v4.0.30319\\MSBuild.exe",
              "buildArguments": [
                "/verbosity:minimal",
                "/p:DCC_DebugInformation=True",
                "/p:RuntimeIdentifiers=3.5",
                "/p:Configuration=Debug"
              ]
            }
          ],
          "description": "Delphi compiler configurations with paths and build arguments",
          "scope": "resource"
        }
      }
    }
  },
  "repository": {
    "url": "https://github.com/valentin-baron/delphi-devkit.git",
    "type": "git"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.ts",
        "options": {
          "printWidth": 150,
          "singleQuote": true,
          "trailingComma": "none",
          "useTabs": false,
          "tabWidth": 2,
          "semi": true,
          "bracketSpacing": true,
          "bracketSameLine": true
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "cd ../server && cargo build && cd ../vscode_extension && npm run check-types && npm run lint && node esbuild.js",
    "watch": "cd ../vscode_extension && npm-run-all -p watch:*",
    "watch:esbuild": "cd ../vscode_extension && node esbuild.js --watch",
    "watch:tsc": "cd ../vscode_extension && tsc --noEmit --watch --project tsconfig.json",
    "package": "cd ../vscode_extension && npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/mock-fs": "^4.13.4",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@types/xmldom": "^0.1.34",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "mock-fs": "^5.5.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "@xmldom/xmldom": "^0.9.8",
    "minimatch": "^10.0.3",
    "npm": "^11.7.0",
    "reflect-metadata": "^0.2.2",
    "uuid": "^11.1.0",
    "vscode-languageclient": "^9.0.1"
  }
}
